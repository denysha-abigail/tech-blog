<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title:</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-url">Post Message:</label>
      <textarea id="post-url" name="post-url" /></textarea>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{!-- wrap entire <section> element in an {{#if}} helper so users won't see any of this content if they have no posts --}}
{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{!-- use the post-info partial to display the details for each post and add a link below it that will route users to a separate edit page (e.g., /dashboard/edit/1) --}}
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>